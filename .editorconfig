root = true

[*]
charset = utf-8
end_of_line = LF
insert_final_newline = true
trim_trailing_whitespace = true

[*.{yml,yaml}]
indent_style = space
indent_size = 4

[.circleci/*.{yml,yaml}]
indent_style = space
indent_size = 2

[*.{php,html,twig}]
indent_style = space
indent_size = 4

[*.{js,jsx,ts,tsx,sass,scss,css}]
indent_style = space
indent_size = 2

[*.md]
max_line_length = 80
trim_trailing_whitespace = false

[COMMIT_EDITMSG]
max_line_length = 0
